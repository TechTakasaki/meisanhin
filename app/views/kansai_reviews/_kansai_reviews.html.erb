<div class="area kansai">
  <ul class="media-list">
    <div>
      <%= link_to 'レビューする', new_kansai_kansai_review_path(@kansai, @kansai_review), class: 'btn btn-primary' %>
    </div><br />
    <div class="panel panel-default">
      <h2>レビュー一覧</h2>
      <%= link_to '戻る', @kansai, class: 'btn btn-primary' %>
      <% @kansai_reviews.each do |kansai_review| %>
        <% user = kansai_review.user %>
        <div class="media">
          <div class="media-left">
            <img class="media-object img-rounded" src="<%= gravatar_url(kansai_review.user, options = { size: 50 }) %>" alt="">
          </div>
          <div class="media-body">
            <div>
              <%= link_to user.name, user_path(user) %> <span class="text-muted">posted at <%= kansai_review.created_at %></span>
            </div>
            <div>
              <p>評価：<%= kansai_review.evaluation %></p>
              <p><%= kansai_review.content %></p>
            </div>
            <div>
              <% if current_user == kansai_review.user %>
                <%= link_to 'このレビューを削除する', kansai_review, method: :delete, data: { confirm: '本当に削除してよろしいですか？' }, class: 'btn btn-danger btn-xs' %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <%= paginate @kansai_reviews %>
  </ul>
</div>